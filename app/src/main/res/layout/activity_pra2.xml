<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pra2"
    android:orientation="vertical"
    android:background="#F6F4F4">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:text="Next"
        android:background="#FFAB40"
        android:id="@+id/nextToAssigement"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:inputType="number"
        android:hint="Enter the Mobile No."
        android:background="#ffffff"
        android:layout_margin="20dp"
        android:paddingLeft="5dp"
        android:id="@+id/editTextForNum"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <TextView
            android:id="@+id/textForUsername"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:gravity="center"
            android:paddingRight="5dp"
            android:text="Enter Mobile Type:"
            android:textColor="#6C6868"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:background="@drawable/custom_button">

            <Spinner
                android:id="@+id/spinner_num_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="Add"
            android:background="#BD0909"
            android:id="@+id/Add_Btn"/>
    </LinearLayout>

    <ListView
        android:id="@+id/LV_1234"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp" />


</LinearLayout>